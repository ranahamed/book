<%provide(:title, 'update')%>
<h1>Update book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@book) do |f| %>

  		<%= render 'shared/error_messages' %>

  		<%=f.label :title%>
  		<%=f.text_field :title , class: 'form-control'%>

  		<%=f.label :publisher%>
  		<%=f.text_field :publisher , class: 'form-control'%>

  		<%=f.label :isbn%>
  		<%=f.text_field :isbn , class: 'form-control'%>

  		<%=f.label :publishing_date%>
  		<%=f.date_field :publishing_date , class: 'form-control'%>

        

  		<%=f.label :Authors%>
		<%@book.authors.each do |p|%>
	        <%= f.fields_for p do |ff| %>
	  		<div>
	    		<%= ff.label :name %>
	    		<%= ff.text_field :name , :readonly => true ,class: 'form-control'%>
		<% end %>

		<% end %>

  		<%= submit_tag "Add author", :type => 'button', :id => 'addAuthor', 
          :onclick => 'addAuthorField()' %> 
     <div id="authorHeader" style="display:none">Address information:  </div>
   
 
      <ul id="myList">
      </ul>

  
    <%=f.submit "update book" ,class: "btn btn-primary" %>
  		
  	<%end%>

</div>